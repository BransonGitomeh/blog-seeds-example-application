<div class="ui middle aligned center aligned grid">
  <div class="login column">
    <h2 class="ui teal image header">
      <img src="http://semantic-ui.com/examples/assets/images/logo.png" class="image">
      <div class="content">
        Log-in
      </div>
    </h2>
    <form {{action "authenticate" model on="submit"}} class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            {{input type="email" id='identification' placeholder='Enter Email' value=model.identification}}
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            {{input type="password" id='password' placeholder='Password' value=model.password}}
          </div>
        </div>
        <button class="ui fluid large teal submit button">Login</button>
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      Not a member yet? {{link-to 'Sign Up' 'signup'}}
    </div>
  </div>
</div>